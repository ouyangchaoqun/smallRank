page{
  height:100%;
  background: rgba(246,247,245,1);
}

@font-face{
    font-family: 'YaHei Consolas Hybrid';
    src : url('../fonts/yaheiconsolashybrid.ttf');
}
.target_box{
  padding-top: 80rpx;
}
.target_box .target_item{
  width:92%;
  height:124rpx;
  background: #fff;
  margin:0 auto;
  margin-bottom: 30rpx;
  position: relative;
}
.imgs{ width: 100rpx;height: 72rpx; margin-left: 38rpx; margin-top: 26rpx; background: url("http://oss.xqzs.cn/resources/runmini/target_bian.png") no-repeat;float: left; background-size: 100%; text-align: center; font-size: 24rpx;color: #FFAA45;font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;line-height:  72rpx;}
.goal{ margin-left: 32rpx; margin-top: 26rpx; float: left; line-height: 1}
.goal .num{font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;font-size: 40rpx;color: #8F9AA3;}
.goal .name{color: #B5B5B5; font-size: 28rpx;}
.selectcol{position: absolute;left: 0;top: 0; width: 10rpx; background: #73D2D4;height: 100%}
.square{ width: 80rpx; height: 70rpx; position: absolute;background: #FD6246;right: 78rpx; top:0;color: #FFFFFF;font-size: 24rpx;}
.triangle{ position: absolute;right: 78rpx; top:70rpx;
    width: 0;
    height: 0;
    border-left: 40rpx solid transparent;
    border-right: 40rpx solid transparent;
    border-top: 26rpx solid #FD6246;
 }
 .square text{width: 48rpx;
 margin: 2rpx auto;
 display: block}
 .zdy{ margin-top: 50rpx; background: #fff; overflow: hidden;height: 124rpx;}
 .zdy .left{float: left;margin-left: 28rpx;}
 .zdy .left .left_s{ font-size:36rpx;
     color:rgba(143,154,163,1);
     line-height:50rpx;
 margin-top: 20rpx;}
 .zdy .left .left_x{
     font-size:24rpx;
     color:rgba(181,181,181,1);
     line-height:34rpx;
 }
 .zdy .right1 {float: right; margin-right: 30rpx; font-size: 36rpx; line-height: 124rpx; color: #979797 ;}
 .zdy .right2{  float: right; margin-right: 28rpx; font-size: 40rpx;color:rgba(177,184,191,1);line-height: 124rpx; font-family: Impact}
 .menceng{ background: rgba(0,0,0,0.5);position: absolute;top: 0;width: 100%;height: 100%; z-index: 3;}
 .set{position: absolute; bottom: 0rpx; width: 100%;height: 680rpx;z-index: 55; background: #fff;text-align: center}
 .set_title{font-size: 36rpx; color: #8F9AA3;line-height: 50rpx; margin-top: 44rpx;}
 .set_btn{
    width:420rpx;
    height:80rpx;
    background: rgba(255,104,87,1);
    border-radius: 98rpx;
    margin:0 auto;
    line-height: 80rpx;
    margin-top: 170rpx;
    font-size: 32rpx;
    color:rgba(255,255,255,1);
    text-align: center;
    box-shadow: 0rpx 10rpx 30rpx rgba(255,104,87,1);
 }