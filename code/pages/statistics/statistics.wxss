.statistics_box{height: 100%;background: #fff;}
.statistics_box .get_header {
    position: relative;}
.statistics_box .recordTime{color: #ff6c0b;font-size:22rpx;}
.statistics_box .get_old{left: 80rpx;height: 34rpx;width: 20rpx;position: absolute;top: 30rpx;display: block;transform: rotate(180deg);-webkit-transform: rotate(180deg);}
.statistics_box .get_next{right: 80rpx;height:34rpx;width: 20rpx;position: absolute;top: 30rpx;display: block;}
.statistics_box .getUpBorder{border-radius: 20rpx;width: 100%;margin: 0 auto;background-color: #fff;padding-top: 20rpx;padding-bottom: 20rpx; }
.statistics_box .week_day text{flex: 1;text-align: center;color: #828080;font-size: 24rpx;}
.statistics_box .getupBgView {
    align-items: center;}
.statistics_box .canlendarTopView{height: 72rpx;font-size: 34rpx;display: flex;display: -webkit-box;display: -webkit-flex;flex-direction: row;align-items: center;justify-content: center;margin-bottom: 22rpx;}
.statistics_box .canlendarTopView .get_centerView{ margin-top: 24rpx;}
.statistics_box .leftBgView{text-align: right;height: 80rpx;-webkit-box-flex: 1;-webkit-flex: 1;flex: 1;flex-direction: row-reverse;}
.statistics_box .get_centerView{-webkit-box-flex: 1;-webkit-flex: 1;flex: 1;height: 72rpx;text-align: center;align-items: center;justify-content: center;line-height: 72rpx;margin-top: 30rpx;}
.statistics_box .rightBgView{height: 80rpx;-webkit-box-flex: 1;-webkit-flex: 1;flex: 1;flex-direction: row;}
.statistics_box .get_weekBgView{height: 50rpx;line-height: 50rpx;padding-bottom: 14rpx;color:#828080
}
.statistics_box .get_weekView{flex-grow: 1;text-align: center;font-size: 24rpx;float: left;width: 14.28%;}
.statistics_box .dateBgView{height: auto;width: 100%;display: flex;flex-direction: row;flex-wrap: wrap;}
.statistics_box .get_dateEmptyView{width: 14.28571%;color: #fff;display: flex;align-items: center;justify-content: center;position: relative;float: left }

.statistics_box .get_dateView{width: 14.28571%;background: #ffffff;position: relative;text-align: center;float: left;height: 90rpx; }
.statistics_box .get_dateView img{height: 52rpx;width: 52rpx;display: block;margin: 1rpx auto;margin-top: 8rpx;margin-bottom: 16rpx;}
.statistics_box .get_datesView{height: 40rpx;color: #828080;font-size: 22rpx;align-items: flex-end;justify-content: center;text-align: center;}
.statistics_box .get_dateSelectView .get_datesView .get_yuan{width: 40rpx;height: 40rpx; border-radius:50%;color: #fff;margin: 0 auto;  background: #ff6c0b; line-height: 40rpx;}
.statistics_box .get_dateSelectView .get_datesView{ margin-bottom: 6rpx;}

.statistics_box .getUpTitle{text-align: center;}
.statistics_box .getUpMain{width: 95%;margin: 0 auto;margin-top: 28rpx;background-color: #fff;border-radius: 20rpx;padding: 24rpx 0;box-shadow: 0rpx 4rpx 20rpx 4rpx rgba(102,102,102,0.2);}
.statistics_box .get_value{height: 80rpx;position: relative;}
.statistics_box .getUp_time{font-size: 24rpx;position: absolute;left: 40rpx;top: 50%;margin-top: -16rpx;}
.statistics_box .getUp_progress{width: 55%;position: absolute;left: 200rpx;top: 50%;margin-top: -15rpx;}
.statistics_box .getUp_count{position: absolute;right: 40rpx;top:50%;margin-top: -20rpx;font-size: 24rpx;}
.statistics_box .getUpCount{text-align: center;margin-top: 50rpx;margin-bottom: 40rpx;}
.statistics_box .getUpCount p{font-size: 24rpx;color: rgba(99,106,116,1);}
.statistics_box .get_top{margin-top: 28rpx;}
.statistics_box .recordTime image{height: 30rpx;margin: 0 auto;display: block;width: 30rpx;}
.statistics_box .get_value .weui-progress__bar{height: 30rpx;background: rgba(245,245,245,1);border-radius: 14rpx;}
.statistics_box .get_value .weui-progress__inner-bar{border-radius: 14rpx;background: linear-gradient(to right,#FF9900, #ff6c0b);height: 30rpx;}
.statistics_box .get_yuan{height: 40rpx;margin-top: 6rpx;}
.statistics_box .addTopBox{ color:#333;}
.statistics_box .addTopColor{font-size: 30rpx;color:rgba(255,255,255,0.6);text-align: center;line-height: 1;margin-bottom: 37rpx;padding-top:27rpx;}
.statistics_box .addTopTime{text-align: center;font-size: 118rpx;margin-bottom: 48rpx;line-height: 1}
.statistics_box .addTopFlex{width:94%;margin:0 auto;display: flex;font-size: 60rpx;border-top: 2rpx solid rgba(255,255,255,0.3);position: relative;line-height: 1;padding-top:41rpx;}
.statistics_box .addTopFlex>view{flex:1;text-align: center;}
.statistics_box .flexLine{position: absolute;left:50%;width:2rpx;height:88rpx;background:rgba(255,255,255,0.3); }
.statistics_box .addTitleColor{color:#303030;font-size: 30rpx;text-align: center;margin-bottom: 34rpx}
.statistics_box .getUpSlice{margin-bottom: 119rpx;padding-top: 30rpx}
.statistics_box .today{ border-top: 20rpx solid #eee;}
.statistics_box .today .i{ height: 90rpx;  line-height: 90rpx; padding-left: 90rpx; border-bottom: solid  2rpx #eee; font-size: 28rpx; color:#666; position: relative}
.statistics_box .today .i.step{background: url(http://oss.xqzs.cn/resources/runmini/stepInfo1.png)  no-repeat; background-size: 30rpx; background-position: 40rpx 28rpx;}
.statistics_box .today .i.km{background: url(http://oss.xqzs.cn/resources/runmini/stepInfo2.png)  no-repeat;background-size: 30rpx; background-position: 40rpx 28rpx;}
.statistics_box .today .i.kll{background: url(http://oss.xqzs.cn/resources/runmini/stepInfo3.png)  no-repeat; background-size: 30rpx; background-position: 40rpx 28rpx;}
.statistics_box .today .right{ position: absolute ; right:30rpx; top:0}
.statistics_box .today .right text{ margin-right: 10rpx; font-size: 38rpx}