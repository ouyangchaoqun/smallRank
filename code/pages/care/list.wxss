page {
    height: 100%;
}

.careMe_box {
    height: 100%;
    position: relative;
    background: #fff;
}

.careMe_list {
    height: 44px;
    border-bottom: 1px solid #eee;
    padding: 10px 15px;
    display: block;
}

.careMe_img {
    height: 44px;
    width: 44px;
    display: block;
    float: left;
    border-radius: 50%;
}

.careMe_div {
    float: left;
    margin-left: 10px;
    padding-top: 2px;
}

.friendsName {
    color: #333333;
    font-size: 15px;
    line-height: 36px;
    width: 120px;
    overflow: hidden;
    text-overflow: ellipsis;
}

.careMe_div image {
    width: 14px;
    display: block;
    padding: 8px 0 8px 2px;
}

.sentTime {
    color: #999;
    font-size: 12px;
    width: 130px; float:right;line-height: 44px;font-family: Arial;

}

.careMe_content {
    width: 60px;
    height: 60px;
    float: right;
    overflow: hidden;
    position: relative;
    font-size: 12px;
    color: #333;
}

.careMe_content .moodpic {
    height: 60px;
    width: 60px;
    display: block;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -30px;
    margin-left: -30px;
}

.careMe_content image {
    height: 32px;
    width: 32px;
    display: block;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -16px;
    margin-left: -16px;
}

.reply {
    margin-top: 5px;
    font-size: 15px;
}

.bottom {
    width: 100%;
    padding-bottom: 20px;
    padding-top: 20px;
    color: #999;
    text-align: center;
    font-size: 14px;
}
