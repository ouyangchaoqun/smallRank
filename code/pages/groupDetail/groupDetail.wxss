page{
    height:100%;
    background: rgba(255,127,120,0.15);
}
.detail_top{
    height:200rpx;
    background: rgba(255,127,120,1);
}
.detail_ul{
    height:714rpx;
    width:92%;
    background: #fff;
    border-radius: 20rpx;
    margin:0 auto;
    margin-top: -50rpx;
    position: relative;
    padding: 66rpx 0;
    margin-bottom: 50rpx;
}
.detail_title{
    color:rgba(253,103,76,1);
    width:42%;
    height:80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 48rpx;
    position: absolute;
    left:50%;
    margin-left:-21%;
    top:-40rpx;
    background: #fff;
    box-shadow: 0 2rpx 4rpx rgba(251,193,191,1);
}
.detail_item{
    height:80rpx;
    line-height: 80rpx;
    padding:20rpx 0;
    border-bottom: 1px solid rgba(223,208,194,1);
    display: flex;
}
.detail_left{
    width:80rpx;
    text-align: center;
    color:rgba(153,153,153,1);
    font-size: 30rpx;
}
.detail_right{
    width:100rpx;
    text-align: right;
    color:rgba(73,75,95,1);
    font-size: 36rpx;
    font-family: Impact;
}
.detail_item image{
    height:80rpx;
    max-width: 80rpx;
    margin-right: 20rpx;
    border-radius: 10rpx;
}
.detail_info{
    width:54%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.detail_info view{
    line-height: 40rpx;
    color:rgba(140,141,152,1);
    font-size: 28rpx;
}
.detail_info .detail_step{
    line-height: 34rpx;
    color:rgba(125,136,146,1);
    font-size: 24rpx;
}
.detail_step text{
    font-family: Impact;
}
.detail_box{
    height:100%;
    overflow-y: scroll;
    border-radius: 20rpx;
}
.detail_btn{
    width:56%;
    height:80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 98rpx;
    background: rgba(255,104,87,1);
    margin:0 auto;
    box-shadow: 0rpx 10rpx 30rpx rgba(255,104,87,1);
    color:rgba(255,255,255,1);
    font-size: 32rpx;
}