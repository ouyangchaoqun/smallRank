.navigator-hover{ background: none !important; opacity: 1 !important}
.cover_bg_in{
  opacity: 0;
  animation: cover_bg_in 0.4s  forwards   ;
  -webkit-animation: cover_bg_in 0.4s forwards     ;
}
@keyframes cover_bg_in {
  0%{
    opacity: 0;
  }
  100%{
    opacity: 1;
  }
}

.cover_bg_out{
  animation: cover_bg_out 0.4s  forwards   ;
  -webkit-animation: cover_bg_out 0.4s forwards     ;
}
@keyframes cover_bg_out {
  0%{
    opacity: 1;
  }
  100%{
    opacity: 0;
  }
}

.cover_main_down_out{
  animation: cover_main_down_out 0.4s  forwards   ;
  -webkit-animation: cover_main_down_out 0.4s forwards     ;
}

@keyframes cover_main_down_out {
  0%{
    transform: translate3d(0, 0, 0);
    -webkit-transform: translate3d(0, 0, 0);
  }
  100%{
    transform: translate3d(0, 120%, 0);
    -webkit-transform: translate3d(0, 120%, 0);
  }
}

.cover_main_up_in{
  transform: translate3d(0, 100%, 0);
  -webkit-transform: translate3d(0, 100%, 0);
  animation: cover_main_up_in 0.4s  forwards   ;
  -webkit-animation: cover_main_up_in 0.4s forwards     ;
}

@keyframes cover_main_up_in{
  0%{
    transform: translate3d(0, 100%, 0);
    -webkit-transform: translate3d(0, 100%, 0);
  }
  100%{
    transform: translate3d(0, 0, 0);
    -webkit-transform: translate3d(0, 0, 0);
  }
}

button{ padding: 0; margin: 0;line-height: normal; background: none}
button:after{ display: none !important}
.navigator-hover{ background: none !important; opacity: 1 !important}
.clear{ clear:both}